# ============================================
# HostIQ Environment Variables
# Copy to .env.local and fill in real values
# NEVER commit .env or .env.local
# ============================================

# --- Database ---
DATABASE_URL=postgresql://user:password@localhost:5432/hostiq

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Auth ---
NEXTAUTH_SECRET=generate-a-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# --- Hostify (PMS) ---
HOSTIFY_API_KEY=your-hostify-api-key
HOSTIFY_BASE_URL=https://api-rms.hostify.com
HOSTIFY_WEBHOOK_AUTH_SECRET=your-webhook-shared-secret

# --- HostBuddy (Guest Messaging AI) ---
HOSTBUDDY_WEBHOOK_SECRET=your-hostbuddy-webhook-verification-secret

# --- OpenPhone (SMS/Voice) ---
OPENPHONE_API_KEY=your-openphone-api-key
OPENPHONE_BASE_URL=https://api.openphone.com/v1

# --- SecureStay (Guest Screening) ---
SECURESTAY_API_KEY=your-securestay-api-key
SECURESTAY_BASE_URL=https://securestay.ai/securestay_api

# --- OpenAI ---
OPENAI_API_KEY=your-openai-api-key

# --- Resend (Email) ---
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=notifications@yourdomain.com

# --- QuickBooks (OAuth 2.0) ---
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_BASE_URL=https://quickbooks.api.intuit.com

# --- RentCast (Market Data) ---
RENTCAST_API_KEY=your-rentcast-api-key
RENTCAST_BASE_URL=https://api.rentcast.io/v1

# --- Airbtics (Market Analytics) ---
AIRBTICS_API_KEY=your-airbtics-api-key
AIRBTICS_BASE_URL=https://crap0y5bx5.execute-api.us-east-2.amazonaws.com/prod

# --- Teller (Banking) ---
TELLER_APP_ID=your-teller-app-id
TELLER_BASE_URL=https://api.teller.io

# --- Accounting App ---
ACCOUNTING_APP_URL=https://luxurylodging-production.up.railway.app
ACCOUNTING_APP_USERNAME=your-username
ACCOUNTING_APP_PASSWORD=your-password

# --- App Config ---
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
NODE_ENV=development
